<script src="/js/edit-post.js"></script>
<div id="article" data-id={{article.id}}>
    <header>
        <h1 class="title">Edit Post</h1>
    </header>
    <form>
        <div class="field">
            <label for="title" class="label">Title</label>
            <div class="control">
                <input class="input" type="text" value="{{article.title}}" id="title" required>
            </div>
        </div>
        <div class="field">
            <label for="content" class="label">Content</label>
            <div class="control">
                <textarea class="input" id="content" rows="4" cols="50" required>{{article.content}}</textarea>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <button class="button is-primary" id="editPost">Edit</button>
            </div>
        </div>
    </form>
</div>