<script src="./js/create-article.js"></script>
<header>
    <h1 class="title">New Post</h1>
</header>
<form>
    <div class="field">
        <label for="title" class="label">Title</label>
        <div class="control">
            <input class="input" type="text" id="title" required>
        </div>
    </div>
    <div class="field">
        <label for="content" class="label">Content</label>
        <div class="control">
            <textarea class="input" id="content" rows="4" cols="50" required></textarea>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary" id="createArticle">Create</button>
        </div>
    </div>
</form>